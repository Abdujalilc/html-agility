@page
@model CKEditor.Pages.CKEditorTest.BasicCKModel

@{
    ViewData["Title"] = "Home page";
}
<link href="~/editors/ckeditor5.css" rel="stylesheet" />
<h1>Edit Template</h1>
<form id="editorForm" method="post">
    <textarea name="content" id="editor" rows="10" cols="80"></textarea>
    <button type="submit">Save</button>
</form>
<script src="~/editors/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>